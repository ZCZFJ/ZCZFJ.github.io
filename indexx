    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- Initialize tsParticles ---
            tsParticles.load("particles-js", {
                fpsLimit: 60, // Adjust for performance if needed
                particles: {
                    number: { value: 80, density: { enable: true, value_area: 800 } }, // Density based particle count
                    color: { value: ["#2563eb", "#60a5fa", "#a855f7"] }, // Array of colors
                    shape: { type: "circle" },
                    opacity: { value: 0.5, random: true, anim: { enable: true, speed: 1, opacity_min: 0.1, sync: false } },
                    size: { value: 3, random: true, anim: { enable: false } }, // Smaller size
                    line_linked: { enable: true, distance: 150, color: "#ffffff", opacity: 0.15, width: 1 }, // Subtle lines
                    move: {
                        enable: true,
                        speed: 1.5, // Slower speed
                        direction: "none",
                        random: true,
                        straight: false,
                        out_mode: "out",
                        bounce: false,
                        attract: { enable: false }
                    }
                },
                interactivity: {
                    detect_on: "canvas",
                    events: {
                        onhover: { enable: true, mode: "grab" }, // Grab effect on hover
                        onclick: { enable: true, mode: "push" }, // Push particles on click
                        resize: true
                    },
                    modes: {
                        grab: { distance: 140, line_opacity: 0.3 },
                        push: { particles_nb: 4 } // Push 4 particles on click
                    }
                },
                detectRetina: true,
                background: {
                    color: "#0f172a", // Match body background
                }
            }).then(container => {
                console.log("tsParticles loaded successfully");
            }).catch(error => {
                console.error("Error loading tsParticles:", error);
            });


            // --- Interactive Card Effects ---
            const cards = document.querySelectorAll('.interactive-card');
            cards.forEach(card => {
                card.addEventListener('mousemove', (e) => {
                    const rect = card.getBoundingClientRect();
                    const x = e.clientX - rect.left; // x position within the element.
                    const y = e.clientY - rect.top;  // y position within the element.
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    const rotateY = (x - centerX) / centerX * 5; // Max rotation 5deg

                    // Update CSS variables for spotlight and rotation
                    card.style.setProperty('--mouse-x', `${x}px`);
                    card.style.setProperty('--mouse-y', `${y}px`);
                    card.style.setProperty('--rotate-y', `${rotateY}deg`); // Used in hover transform
                });

                card.addEventListener('mouseleave', () => {
                    // Reset rotation smoothly via CSS transition
                    card.style.setProperty('--rotate-y', '0deg');
                    // Optionally reset spotlight center, or let it fade out from last position
                    // card.style.setProperty('--mouse-x', `50%`);
                    // card.style.setProperty('--mouse-y', `50%`);
                });
            });


            // --- Text Proximity Effect ---
            const textTargets = document.querySelectorAll('.interactive-text-target');
            let mouseX = window.innerWidth / 2;
            let mouseY = window.innerHeight / 2;
            const effectRadius = 150; // Pixels within which the effect is strongest
            const maxOffset = 5; // Max pixels text will lift
            const maxStroke = 1; // Max stroke width

            // Wrap each word in a span for individual animation
            textTargets.forEach(p => {
                p.innerHTML = p.textContent.split(' ').map(word => `<span class="proximity-word">${word}</span>`).join(' ');
            });
            const words = document.querySelectorAll('.proximity-word');

            function updateTextProximity() {
                words.forEach(word => {
                    const rect = word.getBoundingClientRect();
                    const wordCenterX = rect.left + rect.width / 2;
                    const wordCenterY = rect.top + rect.height / 2;

                    const dx = mouseX - wordCenterX;
                    const dy = mouseY - wordCenterY;
                    const distance = Math.sqrt(dx * dx + dy * dy);

                    // Calculate effect intensity (0 to 1) based on distance
                    const intensity = Math.max(0, 1 - distance / effectRadius);

                    if (intensity > 0.01) { // Apply effect if close enough
                         if (!word.classList.contains('text-proximity-effect')) {
                            word.classList.add('text-proximity-effect');
                         }
                        const offsetY = -intensity * maxOffset;
                        const strokeWidth = intensity * maxStroke;
                        const glowBlur = intensity * 5; // Glow blur radius

                        word.style.transform = `translateY(${offsetY}px)`;
                        word.style.webkitTextStroke = `${strokeWidth}px var(--primary-color-light)`;
                        word.style.textShadow = `0 0 ${glowBlur}px var(--text-glow-color)`;
                    } else {
                        // Reset smoothly via CSS transition if class exists
                        if (word.classList.contains('text-proximity-effect')) {
                            word.style.transform = 'translateY(0px)';
                            word.style.webkitTextStroke = '0px transparent';
                            word.style.textShadow = 'none';
                             // Remove class after transition (optional, depends on CSS)
                             // setTimeout(() => word.classList.remove('text-proximity-effect'), 500);
                        }
                    }
                });

                requestAnimationFrame(updateTextProximity); // Loop for continuous update
            }

            window.addEventListener('mousemove', (e) => {
                mouseX = e.clientX;
                mouseY = e.clientY;
            }, { passive: true }); // Improve scroll performance

            requestAnimationFrame(updateTextProximity); // Start the animation loop

        });
    </script>

</body>
